ScreenManager:
    VoiceWaitScreen:
        name: "wait"
    MainMenuScreen:
        name: "main"

<VoiceWaitScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 30

        Label:
            text: "üé§ Please say 'open' to start"
            font_size: 32
            halign: 'center'
            valign: 'middle'
            text_size: self.size

<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20

        Label:
            text: "üëÅ VISION IRL"
            font_size: 36
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: 80
            text_size: self.size

        Label:
            id: status_label
            text: "System ready. Tap or say 'open system' to begin."
            font_size: 20
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            size_hint_y: None
            height: 80

        Button:
            text: "‚ñ∂ Start System"
            font_size: 24
            size_hint_y: None
            height: 60
            on_press: root.start_system()

        Button:
            text: "‚èπ Exit App"
            font_size: 24
            size_hint_y: None
            height: 60
            on_press: app.stop()